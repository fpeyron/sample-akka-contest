<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--
            <pattern>*** \(%logger{30}\)%green(%X{debugId}) %msg%n</pattern>
            <pattern>%d{ISO8601} [%-5level] %logger{115} - %msg%n%rEx</pattern>
            -->
            <pattern>%d{HH:mm:ss,SSS} [%-5level] %-50logger{50} - %msg%n%rEx</pattern>
        </encoder>
    </appender>
    <root level="${log.root:-info}">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="slick.jdbc.JdbcBackend.statement"         level="${log.jdbc.statement:-info}" />
</configuration>
